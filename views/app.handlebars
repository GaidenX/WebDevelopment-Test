<section class="section-search">
    <form id="tweetsSearch" action="/searchTweets" method="post" class="form-horizontal">
        <input type="hidden" id="username" name="username" value="{{username}}">
        <input type="text" id="searchTerm" name="searchTerm" placeholder="Busque pela Hashtag" class="form-control" required>
        <button type="submit" class="btn btn-primary btn-sm"><i class="fas fa-search"></i></button>
    </form>
</section>

<section class="section-tweets">
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div id="map"></div>
                <script>
                    var map;
                    var initPosition = {
                        lat: 25,
                        lng: 0
                    }

                    function initMap() {
                        map = new google.maps.Map(document.getElementById('map'), {
                            center: initPosition,
                            zoom: 2
                        });
                    }
                </script>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                   <h3 class="card-title"><i class="fab fa-twitter"></i> Tweets</h3> 
                </div>
                <div class="card-body tweets-area">
                    <div class="tweets-result"><small>Nenhuma busca foi realizada no momento</small></div>
                    
                    <ul id="cardTweets"></ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section-analyze">
    <h2>Watson Analise</h2> 
    <button type="button" class="btn btn-primary btn-sm" id="watsonAnalyzeBtn"><i class="fas fa-search"></i> Analisar </button>
    <input type="hidden" id="watsonText" name="watsonText" value="" data-id="">
    <p class="tweet-highlight" id="tweet-highlight">"Texto do usuário"</p>

    <div class="mini-cards-area">
        <div class="mini-card">
            <i class="fas fa-search"></i>
            <label>raiva</label>
            <input id="card-angry" type="number" value="0.9"/>
        </div>
        <div class="mini-card">
            <i class="fas fa-search"></i>
            <label>indignação</label>
            <input id="card-disgust" type="number" value="0.9"/>
        </div>
        <div class="mini-card">
            <i class="fas fa-search"></i>
            <label>medo</label>
            <input id="card-fear" type="number" value="0.9"/>
        </div>
        <div class="mini-card">
            <i class="fas fa-search"></i>
            <label>felicidade</label>
            <input id="card-joy" type="number" value="0.9"/>
        </div>
        <div class="mini-card">
            <i class="fas fa-search"></i>
            <label>tristeza</label>
            <input id="card-sadness" type="number" value="0.9"/>
        </div>
    </div>
</section>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBfgH-VXQ1NnmhBwIi68sATUGcxXTdhrHI&callback=initMap" async
    defer></script>